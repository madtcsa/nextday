<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomSeekBarStyle">
        <item name="android:maxHeight">1dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progerss_drawabe</item>
        <item name="android:thumb">@android:color/transparent</item>
    </style>

    <style name="WelcomeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_start_default_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
